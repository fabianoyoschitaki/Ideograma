<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <gradient
          android:startColor="#787878"
          android:endColor="#FFFFFF"
          android:angle="270" />
      <stroke
          android:width="2dp"
          android:color="#000000" />
      <corners
          android:radius="15dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
